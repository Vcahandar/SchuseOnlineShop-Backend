@model LayoutVM



<header>
    <section id="page-navbar" class="d-lg-block d-none">
        <div class="up-navbar">
            <div class="container">
                <div class="row">
                    <div class="col-3">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle language basic" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <span> English</span>
                            </a>
                            <ul class="dropdown-menu language">
                                <li><a class="dropdown-item eng" href="#"><span>English</span></a></li>
                                <li>
                                    <a class="dropdown-item grm" href="#"><span> Germany</span></a>
                                </li>
                                <li><a class="dropdown-item fr" href="#"><span> France</span></a></li>

                            </ul>
                            <div class="line"></div>

                            <a class="nav-link dropdown-toggle usd basic" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <span>USD $</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item usd-frst " href="#">
                                        <span>
                                            United States (USD
                                            $)
                                        </span>
                                    </a>
                                </li>
                                <li><a class="dropdown-item eur" href="#"><span>Europe (EUR €)</span></a></li>
                            </ul>

                        </li>
                    </div>

                    <div class="col-6">
                        <div class="text-header">
                            <p>@Model.GetSettingDatas["HeaderText"]</p>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="account-basket">
                            <a class="nav-link dropdown-toggle language basic" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <span>My Account</span>
                            </a>
                            <ul class="dropdown-menu language">
                                <li><a class="dropdown-item eng" href="~/login.html"><span>Log In</span></a></li>
                                </li>
                            </ul>

                            <div class="line"></div>
                            <div class="icon">
                                <a href="~/cart.html"><i class="fa-solid fa-bag-shopping"></i></a>
                                <div class="basket-count">
                                    <span>0</span>
                                </div>
                                <a class="wishlist-nav" href="~/wishlist.html">
                                    <i class="fa-regular fa-bookmark"></i>
                                </a>
                                <div class="basket-count">
                                    <span>0</span>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="header-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-3">
                        <div class="header-service">
                            <div class="icon">
                                <i class="fa-solid fa-headset"></i>
                            </div>
                            <div class="service">
                                <h6>Need Help?</h6>
                                <p>@Model.GetSettingDatas["Mobil"]</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="header-logo">
                            <img src="~/assets/img/logo/@Model.GetSettingDatas["Logo"]" alt="">
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="search">
                            <input type="text" placeholder="Search Product Here...">
                            <div class="search-icon">
                                <a>
                                    <i class="fa-solid fa-magnifying-glass fa-2xs"></i>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="down-navbar">
            <ul>
                <li><a href="~/home.html">Home</a></li>
                <li><a href="~/shoes.html">Shoes</a></li>
                <li><a href="~/man-shoes.html">Man Shoes</a></li>
                <li><a href="">Women Shoes</a></li>
                <li><a href="~/contact.html">Contact</a></li>
                <li><a href="~/blog.html">Blog</a></li>
                <li><a href="~/about.html">About</a></li>
            </ul>
        </div>
    </section>
    <section id="mobil-navbar" class="d-lg-none d-block">

        <div class="up">
            <div class="nvb d-flex">
                <div class="col-12">
                    <div class="mobil-down-navbar">
                        <div class="account-mob-icon">
                            <a href="~/login.html"><i class="fa-regular fa-user"></i></a>
                        </div>
                        <div class="line"></div>
                        <div class="basket-mob-icon">
                            <a href="~/cart.html"><i class="fa-solid fa-basket-shopping"></i></a>
                            <div class="basket-count">
                                <span>0</span>
                            </div>
                            <a class="wishlist-nav" href="~/wishlist.html">
                                <i class="fa-regular fa-bookmark"></i>
                            </a>
                            <div class="basket-count">
                                <span>0</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="down">

            <div class="sidebar-mob-navbar">
                <div class="col-3">
                    <div class="hamburger-icon">
                        <i class="fa-solid fa-bars"></i>
                    </div>
                </div>
                <div class="col-5">
                    <div class="nav-logo">
                        <img src="~/assets/img/logo/@Model.GetSettingDatas["Logo"]" alt="">
                    </div>
                </div>


                <div class="col-4">
                    <div class="search-mob-icon">
                        <div class="search-box">
                            <input type="text" placeholder="Search here" />
                            <button type="submit">
                                <i class="bx bx-search search-icon"></i>
                            </button>
                        </div>
                    </div>
                </div>



            </div>

            <div class="content-area">
                <i class="fa-solid fa-xmark iconx"></i>
                <div class="content-area-center">
                    <ul>
                        <li>
                            <a href="~/home.html">Home</a>
                        </li>
                        <li>
                            <a href="~/shoes.html">Shoes</a>
                        </li>
                        <li>
                            <a href="">Men Shoes</a>
                        </li>
                        <li>
                            <a href="">Women Shoes</a>
                        </li>
                        <li>
                            <a href="~/contact.html">Contact</a>
                        </li>
                        <li>
                            <a href="~/blog.html">Blog</a>
                        </li>
                        <li><a href="~/about.html">About</a></li>
                    </ul>

                </div>
            </div>
        </div>
    </section>
</header>
