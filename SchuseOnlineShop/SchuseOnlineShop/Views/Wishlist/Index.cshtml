@model List<WishlistDetailVM>
@inject ILayoutService layout



@{
    ViewData["Title"] = "Index";
}


@section Links{

    <link rel="stylesheet" href="~/assets/css/wishlist/wishlist.css">
    <title>Wishlist</title>
}

<main>
    <section id="top-column-content">
        <div class="column-content">
            <div class="title">
                <h2>Wishlist</h2>
            </div>
            <div class="choose">
                <a asp-controller="Home" asp-action="Index">Home |</a>
                <span>Wishlist</span>
            </div>
        </div>
    </section>

    <section id="wishlist-main">
        <div class="container">
            <div class="wishlist-table">
                <div class="empty-continue d-none">
                    <div class="empty">
                        <h2>Your wishlist is empty</h2>
                    </div>
                    <div class="continue">
                        <a asp-controller="Shop" asp-action="Index">
                            <button type="submit" class="btn btn-warning">Continue shopping</button>
                        </a>
                    </div>

                </div>
                <form>
                    @if (Model.Count > 0)
                    {
                        <table class="table product-table">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>

                            <tbody class="tbody">
                                @foreach (var item in Model)
                                {
                                    <tr data-id="@item.Id">
                                        <td class="td-img">
                                            <div class="prdct-img">
                                                <img src="~/assets/img/shoes/product-img/@item.Image" alt="">
                                            </div>
                                        </td>
                                        <td class="td-name">
                                            <a asp-controller="Shop" asp-action="ProductDetail" asp-route-id="@item.Id">@item.Name</a>
                                        </td>
                                        <td class="td-total">@item.Price.ToString("0.00") $</td>
                                        <td>
                                            <a class="delete-product">
                                                <i class="fa-solid fa-trash delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                

                    <div class="total-continue">
                        <div class="backShop">
                            <a asp-controller="Shop" asp-action="Index"><button type="button" class="btn btn-warning">Continue shopping</button></a>
                        </div>

                    </div>

                </form>

            </div>
        </div>

    </section>
</main>


@section Script{

    <script src="https://kit.fontawesome.com/b01bc4ce26.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js
    "></script>
    <script src="https://code.jquery.com/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="~/assets/js/wishlist.js"></script>
 }
